<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:scrollbars="none">
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="fill_parent">
		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="合同详细信息"
			android:textSize="22sp" />
		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content">
			<TextView android:text="合同编号" android:layout_width="80dp"
				android:layout_height="wrap_content" android:textSize="18sp" />
			<EditText android:id="@+id/conId" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:textSize="18sp"
				android:editable="false"></EditText>
		</LinearLayout>
		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content">
			<TextView android:text="合同名称" android:layout_width="80dp"
				android:layout_height="wrap_content" android:textSize="18sp" />
			<EditText android:id="@+id/conName" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:textSize="18sp"
				android:editable="false"></EditText>
		</LinearLayout>
		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content">
			<TextView android:text="合同甲方" android:layout_width="80dp"
				android:layout_height="wrap_content" android:textSize="18sp" />
			<EditText android:id="@+id/conOne" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:textSize="18sp"
				android:editable="false"></EditText>
		</LinearLayout>
		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content">
			<TextView android:text="合同乙方" android:layout_width="80dp"
				android:layout_height="wrap_content" android:textSize="18sp" />
			<EditText android:id="@+id/conTwo" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:textSize="18sp"
				android:editable="false"></EditText>
		</LinearLayout>
		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content">
			<TextView android:text="合同丙方" android:layout_width="80dp"
				android:layout_height="wrap_content" android:textSize="18sp" />
			<EditText android:id="@+id/conThree" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:textSize="18sp"
				android:editable="false"></EditText>
		</LinearLayout>
		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content">
			<TextView android:text="签订日期" android:layout_width="80dp"
				android:layout_height="wrap_content" android:textSize="18sp" />
			<EditText android:id="@+id/conDate" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:textSize="18sp"
				android:editable="false"></EditText>
		</LinearLayout>
		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content">
			<TextView android:text="合同价款" android:layout_width="80dp"
				android:layout_height="wrap_content" android:textSize="18sp" />
			<EditText android:id="@+id/conFund" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:textSize="18sp"
				android:editable="false"></EditText>
		</LinearLayout>
		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content">
			<TextView android:text="所属项目" android:layout_width="80dp"
				android:layout_height="wrap_content" android:textSize="18sp" />
			<EditText android:id="@+id/project" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:textSize="18sp"
				android:editable="false"></EditText>
		</LinearLayout>
		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content">
			<TextView android:text="建设内容" android:layout_width="80dp"
				android:layout_height="wrap_content" android:textSize="18sp" />
			<EditText android:id="@+id/buildcontent"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:textSize="18sp" android:editable="false"></EditText>
		</LinearLayout>
		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content">
			<TextView android:text="合同备注" android:layout_width="80dp"
				android:layout_height="wrap_content" android:textSize="18sp" />
			<EditText android:id="@+id/conRemark" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:textSize="18sp"
				android:editable="false"></EditText>
		</LinearLayout>
		<Button android:id="@+id/backButton" android:text="返回"
			android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>



	</LinearLayout>
</ScrollView>
